<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

<div class="form-group">
    <% term_options.each do |term| %>
        <input type="hidden" name="application[term_id]" value="<%= term.id %>" />
    <% end %>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="first-name-input">First Name</label>
        <input id="first-name-input" class="form-control" type="text" name="application[first_name]" value="<%= application.first_name if application.present? %>" placeholder="Given" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="last-name-input">Last Name</label>
        <input id="last-name-input" class="form-control" type="text" name="application[last_name]" value="<%= application.last_name if application.present? %>" placeholder="Family" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="email-input">UBC Email Address</label>
        <input id="email-input" class="form-control" type="email" name="application[email]" value="<%= application.email if application.present? %>" placeholder="UBC Email Address" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="student-id-input">Student Number</label>
        <input id="student-id-input" class="form-control" type="text" name="application[student_id]" value="<%= application.student_id if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="faculty-input">Faculty</label>
        <input id="faculty-input" class="form-control" type="text" name="application[faculty]" value="<%= application.faculty if application.present? %>" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="program-input">Program</label>
        <input id="program-input" class="form-control" type="text" name="application[program]" value="<%= application.program if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="study-year-input">Year of Studies</label>
        <input id="study-year-input" class="form-control" type="number" name="application[study_year]" min="1" step="1" value="<%= application.study_year if application.present? %>" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="gpa-input">Current GPA</label>
        <input id="gpa-input" class="form-control" type="number" name="application[gpa]" min="0" max="4.33" step="0.01" value="<%= application.gpa if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <label for="ubc-employee-id-input">UBC Employee ID</label>
        <input id="ubc-employee-id-input" class="form-control" type="text" name="application[ubc_employee_id]" value="<%= application.ubc_employee_id if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <p><b>Gender</b></p>
        <label class="radio-inline">
            <input type="radio" name="application[gender]" value="Male" <%= "checked" if application.present? && application.gender == 'Male' %> />
            <span>Male</span>
        </label>
        <label class="radio-inline">
            <input type="radio" name="application[gender]" value="Female" <%= "checked" if application.present? && application.gender == 'Female' %>/>
            <span>Female</span>
        </label>
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <label for="street-input">Current Address</label>
        <input id="street-input" class="form-control" type="text" name="application[street]" value="<%= application.street if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="city-input">City</label>
        <input id="city-input" class="form-control" type="text" name="application[city]" value="<%= application.city if application.present? %>" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="postal-code-input">Postal Code</label>
        <input id="postal-code-input" class="form-control" type="text" name="application[postal_code]" value="<%= application.postal_code if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="home-phone-input">Home Phone Number</label>
        <input id="home-phone-input" class="form-control" type="text" name="application[home_phone]" value="<%= application.home_phone if application.present? %>" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="cell-phone-input">Cell Phone Number</label>
        <input id="cell-phone-input" class="form-control" type="text" name="application[cell_phone]" value="<%= application.cell_phone if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <p><b>Will you be a graduate student in the term(s) you are applying for?</b></p>
        <label class="radio-inline">
            <input type="radio" name="application[graduate]" value="true" <%= "checked" if application.present? && application.graduate %> />
            <span>Yes</span>
        </label>
        <label class="radio-inline">
            <input type="radio" name="application[graduate]" value="false" <%= "checked" if application.present? && !application.graduate %> />
            <span>No</span>
        </label>
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <p><b>Will you be a full-time student in the term(s) you are applying for?</b></p>
        <label class="radio-inline">
            <input type="radio" name="application[full_time]" value="true" <%= "checked" if application.present? && application.full_time %> />
            Yes
        </label>
        <label class="radio-inline">
            <input type="radio" name="application[full_time]" value="false" <%= "checked" if application.present? && !application.full_time %> />
            <span>No</span>
        </label>
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <p><b>Have you held a previous UTA position at UBC O?</b></p>
        <label class="radio-inline">
            <input type="radio" name="application[previous_ta]" value="true" <%= "checked" if application.present? && application.previous_ta %> />
            <span>Yes</span>
        </label>
        <label class="radio-inline">
            <input type="radio" name="application[previous_ta]" value="false" <%= "checked" if application.present? && !application.previous_ta %> />
            <span>No</span>
        </label>
    </div>
</div>

<div class="row">
    <div class="form-inline form-group col-xs-12">
        <p><b>Number of hours per week (minimum 2; maximum 12):</b></p>
        <label for="preferred-hours-input">Preferred Hours</label>
        <input id="preferred-hours-input" class="form-control" type="number" name="application[preferred_hours]" min="2" max="12" step="1" value="<%= application.preferred_hours if application.present? %>" />

        <label for="maximum-hours-input">Maximum Hours</label>
        <input id="maximum-hours-input" class="form-control" type="number" name="application[maximum_hours]" min="2" max="12" step="1" value="<%= application.maximum_hours if application.present? %>" />
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
    <p><b>Select your preferred subjects:</b></p>

    <% @courses.pluck(:subject).uniq.each do |subject| %>

    <label class="inline-checkbox">
        <input class="preferred-subject-checkbox" type="checkbox" value="<%= subject %>" />
        <span><%= subject %></span>
    </label>

    <% end %>

    </div>
</div>

<div class="row">
    <div class="form-group col-xs-12">
        <script type="text/javascript">
            var courses = <%= raw @courses.to_json %>;
        </script>

        <p><b>Select your preferred courses:</b></p>
        <div id="courses-container" class="container-fluid"></div>
    </div>
</div>

<button class="btn btn-primary" type="submit">Submit Application</button>