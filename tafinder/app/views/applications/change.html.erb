<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1>Request for Application Modification/Removal</h1>
            <hr>
            <p>Enter your student ID and a message below to notify the admin that you would like to make a change to your submission.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <form accept-charset="UTF-8" action="<%= change_application_path %>" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

                <div class="form-group">
                    <label for="student-id-input">Student Id</label>
                    <input id="student-id-input" class="form-control" name="application[student_id]" type="text" />
                </div>

                <div class="form-group">
                    <% @term_options.each do |term| %>
                    <label class="checkbox-inline">
                        <input id="term-<%= term.to_s %>-input" type="checkbox" name="application[term_id]" value="<%= term.id %>" />
                        <span><%= term.to_s %></span>
                    </label>
                    <% end %>
                </div>

                <div class="form-group">
                    <label for="message-input">Message</label>
                    <textarea id="message-input" class="form-control" name="message" rows="10"></textarea>
                </div>

                <button class="btn btn-primary" type="submit">Send Request</button>
            </form>
        </div>
    </div>
</div>
