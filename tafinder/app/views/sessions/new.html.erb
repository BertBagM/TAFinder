<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1>Admin Login</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <form accept-charset="UTF-8" action="<%= login_path %>" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

                <div class="form-group">
                    <label for="email-input">Email Address</label>
                    <input id="email-input" class="form-control" type="email" name="session[email]" />
                </div>

                <div class="form-group">
                    <label for="password-input">Password</label>
                    <input id="password-input" class="form-control" type="password" name="session[password]" />
                </div>

                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>